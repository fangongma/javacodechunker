<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
<Appenders>
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] %c - %msg%n"/>
    </Console>

    <!-- Rolling File Output -->
    <RollingFile name="RollingFile" fileName="D:\\Learning\\Git\\_Log\\javacodechunker\\logs\\codechunker.log"
                 filePattern="D:\\Learning\\Git\\_Log\\javacodechunker\\logs\\codechunker-%d{yyyy-MM-dd}-%i.log.gz">
        <PatternLayout>
            <Pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] %c - %msg%n</Pattern>
        </PatternLayout>
        <Policies>
            <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            <SizeBasedTriggeringPolicy size="20MB"/>
        </Policies>
        <DefaultRolloverStrategy max="7"/>
    </RollingFile>
</Appenders>

<Loggers>
    <Root level="info">
        <AppenderRef ref="Console"/>
        <AppenderRef ref="RollingFile"/>
    </Root>

    <!-- Optional: Fine-tune your own package log level -->
    <Logger name="jp.co.jri.codechunker" level="debug" additivity="false">
        <AppenderRef ref="Console"/>
        <AppenderRef ref="RollingFile"/>
    </Logger>
</Loggers>
</Configuration>